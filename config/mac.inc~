############################################
# Specify Directories and output name
############################################

SRCDIR	= lib

############################################
#  Paths to Include Files
############################################

# GNU Scientific Library
GSLINC	= /opt/local/include/gsl
 
# ATLAS Include
ATLASINC = /usr/include/atlas

############################################
#  Paths to Libraries
############################################

# GNU Scientific Library
GSLLIB	= /opt/local/lib
 
# ATLAS
ATLASLIB = /usr/lib64/atlas

# SCLAPACK
SCLAPACKLIB= /Users/tbetcke/libs/scalapack


############################################
# Libraries
############################################

# GNU Scientific Library
GSL = -lgsl

# Lapack
LAPACK = -llapack

# Blas
BLAS   = -lptf77blas -lptcblas -latlas -lpthread -lgfortran

# OpenMP
OMP= -lgomp

# ScaLapack
SCLAPACK= -L/opt/local/lib/gcc43 -lscalapack -lblacsC -lblacs -lblacsC -lmpi_f77 -lgfortran

############################################
# Compiler and Flags
############################################
CPP	= icpc
CFLAGS  = -DBEM2DMPI -I$(GSLINC) -I$(ATLASINC) -I/opt/local/include -I/opt/openmpi/include
DEBUGFLAGS = -g -save-temps
OPTFLAGS = -O3

